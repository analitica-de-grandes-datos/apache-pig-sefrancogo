datos = LOAD 'data.csv' USING PigStorage(',')
   AS (
        id:int,
        name:chararray,
        lastname:chararray,
        date:chararray,
        color:chararray,
        value:int
   );

resultado = FOREACH datos GENERATE FLATTEN(STRSPLIT(date,'-',3));

resultado2 = GROUP resultado BY $0;

resultado3 = FOREACH resultado2 GENERATE group,COUNT(resultado);

STORE resultado3 INTO 'output' USING PigStorage(',');
