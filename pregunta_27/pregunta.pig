datos = LOAD 'data.csv' USING PigStorage(',')
   AS (
        id:int,
        name:chararray,
        lastname:chararray,
        date:chararray,
        color:chararray,
        value:int
   );

selection = FOREACH datos GENERATE name,INDEXOF(name,'ia',0);

position = FOREACH selection GENERATE $1;

STORE position INTO 'output';
